<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    
     android:background="@drawable/background"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
       

        <Button
            android:id="@+id/bTCELL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView1"
            android:onClick="TCELL"
            android:text="TCELL" />

       

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView2"
            android:gravity="center"
            android:weightSum="100" >

            <Button
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:onClick="TakeFoto"
                android:text="Fotoğraf Çek" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout2" >

            <TextView
                android:id="@+id/tvSiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site Name:" />

            <EditText
                android:id="@+id/etSiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout3" >

            <TextView
                android:id="@+id/tvKonu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Konu         :" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout4" >

            <TextView
                android:id="@+id/tvAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama  :" />

            <EditText
                android:id="@+id/etAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout5"
            android:weightSum="100" >

            <Button
                android:id="@+id/bHarita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="Harita"
                android:text="Haritadan Konum Güncelle"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bUploadToServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="Send"
                android:text="Gönder"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout6"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tvLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Latitude:" />

            <TextView
                android:id="@+id/tvLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Longitude:" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
           android:layout_below="@+id/linearLayout1" >

            
			<TableRow android:layout_width="fill_parent"
			    android:orientation="horizontal"
			    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSiteNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site No      :" />

            <EditText
                android:id="@+id/etSiteNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
			
                
           	
            </EditText>
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout7"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tvharitadanlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_weight="50"
                android:text="" />

            <TextView
                android:id="@+id/tvharitadanlon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="" />
        </LinearLayout>

        <TextView
            android:visibility="visible"
            android:id="@+id/tdeneme"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout9"
            android:text="deneme"
            />

        <Button
           android:onClick="SOL"
            android:text="SOL"
           	android:id="@+id/bSOL" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView1"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="400sp"
            android:layout_height="400sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bTCELL"
            android:src="@drawable/capture" />

    </RelativeLayout>

  </ScrollView>